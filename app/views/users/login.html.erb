<%if !flash[:notice].blank? %>
<div align="center" class="flash">
	<%= flash[:notice]%>
</div>
<%end%>

<div align="center">

	<h2>Welcome to Favorite Website</h2>

</div>

<div align="center">

	<h2>Login here</h2>

</div>
<div align="center" class="lll">

	<%= form_tag(:action =>'login_me' ) do %>
	<table>
		<tr height="50">
			<td><h3>new user? <%= link_to(" Register",{:action=>'register'} ) %></h3></td>
		</tr>

		<tr>
			<td>Enter Email :</td><td><%= text_field_tag(:email) %></td>
		</tr>
		<tr>
			<td>Password : </td><td><%= password_field_tag(:password)%></td>
		</tr>
		<tr>
			<td></td><td><%= submit_tag ('Login') %></td>
		</tr>
	</table>
	<%end%>

</div>
