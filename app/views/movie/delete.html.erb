<%if !flash[:notice].blank? %>
<div align="center" class="flash">
	<%=flash[:notice]%>
</div>
<%end%>
<%=render(:partial=>'shared/header_of_details',:locals=>{:object => @user } ) %>

<div align="center" class="movie">


<h3>Do you want to delete this record ?</h3>

<table border="0">
	<tr>
		<td width="120">
			<%= link_to(" back to records",{:action=>'list'} ) %>
		</td>
		
		<td colspan="2">
			<%= form_for(:movie, :url => { :action =>'destroy' ,:id=> @movie.id} ) do |f| %>
		</td>
	</tr>
	
	<tr>
		<td width="120">
			Movie name :
		</td>
		
		<td colspan="2">
		 <%= @movie.name %><br/>
		</td>
	</tr>

<tr>
		<td width="120">
			Description : 
		</td>
		
		<td colspan="2">
			<%= @movie.desc %>
			<%= excerpt(@movie.desc,'includes',:radius=> 2 ,:omission=>"...") %>
		</td>
	</tr>
	<tr>
		<td width="120">
			Gener :
		</td>
		
		<td colspan="2">
		<%= @movie.gener %>
		</td>
	</tr>
	<tr>
		<td width="120">
		<%= submit_tag("Delete") %>
		<% end %>
		</td>
		
		<td colspan="2">
		<%= button_to "Calcel",:controller => 'movie',:action=>'show' ,:id=> @movie.id %>
		</td>
	</tr>
</div>