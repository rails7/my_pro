<%if !flash[:notice].blank? %>
<div align="center" class="flash">
	<%=flash[:notice]%>
</div>
<%end%>
<%=render(:partial=>'shared/header_of_details',:locals=>{:object => @user } ) %>

<div align="center"  class="song">


<h3>Do you want to delete this record ?</h3>

<table border="0">
	<tr>
		<td width="120">
			<%= link_to(" back to records",{:action=>'list'} ) %>
		</td>
		
		<td colspan="2">
			<%= form_for(:song, :url => { :action =>'destroy' ,:id=> @song.id} ) do |f| %>
		</td>
	</tr>
	
	<tr>
		<td width="120">
			Song name :
		</td>
		
		<td colspan="2">
		 <%= @song.name %><br/>
		</td>
	</tr>

<tr>
		<td width="120">
			Artist : 
		</td>
		
		<td colspan="2">
			<%= @song.artist %>
			<%= excerpt(@song.artist,'includes',:radius=> 2 ,:omission=>"...") %>
		</td>
	</tr>
	<tr>
		<td width="120">
			Gener :
		</td>
		
		<td colspan="2">
		<%= @song.gener %>
		</td>
	</tr>
	<tr>
		<td width="120">
		<%= submit_tag("Delete") %>
		<% end %>
		</td>
		
		<td colspan="2">
		<%= button_to "Calcel",:controller => 'song',:action=>'show' ,:id=> @song.id %>
		</td>
	</tr>
</div>